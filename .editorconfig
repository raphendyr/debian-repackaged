# EditorConfig: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile*]
indent_style = tab
indent_size = 8

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{css,sass,scss}]
indent_style = tab

[*.js]
indent_style = space
indent_size = 2

[*.sh]
indent_style = tab

[**.min.{js,css}]
indent_style = unset
insert_final_newline = unset
trim_trailing_whitespace = false
